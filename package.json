{
  "name": "tk",
  "displayName": "Tab-Keeper",
  "description": "Keeps your tabs organized by branch in VSCode.",
  "publisher": "chunter17",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hunter102/Tab-Keeper"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
 "activationEvents": [
    "onStartupFinished",
    "onCommand:your.extension.command"
  ],
  "main": "./out/extension.js",
  "contributes": {
     "viewsContainers": {
      "activitybar": [
        {
          "id": "tabKeeperSidebar",
          "title": "Tab Keeper",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "tabKeeperSidebar": [
        {
          "id": "tabKeeperSettingsView",
          "name": "Settings",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "tk.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
